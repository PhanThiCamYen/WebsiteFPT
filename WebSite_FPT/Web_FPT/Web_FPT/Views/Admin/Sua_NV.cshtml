@{
    ViewBag.Title = "Sua_NV";
    Layout = "~/Views/Shared/QuanLy.cshtml";
}
<div class="container"style="text-align:center;padding-left:20%">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    <form>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Mã Nhân Viên</label>
            <div class="col-sm-4">
                <input style="text-align:center" disabled type="text" class="form-control" name="maNV" placeholder="Mã Nhân Viên" value="@Model.MaNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Họ Tên</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="tenNV" placeholder="Tên Nhân Viên" value="@Model.TenNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Ngày Sinh</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="ngaysinhNV" placeholder="Ngày Sinh Nhân Viên" value="@Model.NgaySinhNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Giới Tính</label>
            <div class="col-sm-4">
                @if (@Model.GioiTinhNV != null)
                {
                    String gioiTinh = Convert.ToString(@Model.GioiTinhNV);
                    if (gioiTinh == "True")
                    {
                        gioiTinh = "Nam";
                    }
                    else
                    {
                        gioiTinh = "Nữ";
                    }
                    <input style="text-align:center" type="text" class="form-control" name="gioiTinhNV" placeholder="Giới Tính Nhân Viên" value="@gioiTinh">
                }
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="emailNV" placeholder="Email Nhân Viên" value="@Model.EmailNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Số Điện Thoại</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="SDTNV" placeholder="Số Điện Thoại Nhân Viên" value="@Model.SDTNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Địa Chỉ</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="SDTNV" placeholder="Địa Chỉ Nhân Viên" value="@Model.DiaChiNV">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Mật Khẩu</label>
            <div class="col-sm-4">
                <input style="text-align:center" type="text" class="form-control" name="MatKhauNV" placeholder="Mật Khẩu Nhân Viên" value="@Model.MatKhauNV">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4"style="align-items:center">
                <input type="submit" class="btn btn-secondary" value="Lưu" style="width:120px;height:49px; " />
            </div>
        </div>
    </form>


    }

</div>


