    <script>
        function fnSearch(item) {
            var valInput = $(item).val().trim();
            setTimeout(function () {
                $.ajax({
                    url: '@Url.Action("GetDataSearch", "TimKiem")',
                    dataType: "json",
                    data: { value: valInput },
                    type: "POST",
                    success: function (result) {
                        $(".box-content-search").html('');
                        for (var i = 0; i < result.length; i++) {
                            $(".box-content-search").append('<div class="w-100 item-search">' + result[i].TenSP + '</div>');
                            console.log(result[i].TenSP);
                        }
                        if (result.length == 0) {
                            $(".box-content-search").append('<div class="w-100 text-center">Không có dữ liệu</div>');
                        }
                        if (valInput != "") {
                            $(".box-content-search").show();
                        } else {
                            $(".box-content-search").hide();
                        }
                    },
                });
            }, 500);


        }
    </script>
