                                        @using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Get, new { @class = "form-inline my-1 my-lg-0" }))
                                        {
                                            <input class="form-control" type="search" id="id" name="id" placeholder="Tìm kiếm tên sản phẩm" aria-label="search" style="width:400px;">
                                            <button type="submit" aria-label="Tìm Kiếm" class="btn btn-primary" title="Tìm kiếm" style="width:55px;height:40px;text-align:center;background-color:black;border:1px solid black;">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        }
                                    </ul>
                                </div>
                                <div class="menu-item">
                                    <i style="color:white;" class="fa fa-store"></i>
                                    <a style="color:white;" href="#">Hệ thống cửa hàng</a>
