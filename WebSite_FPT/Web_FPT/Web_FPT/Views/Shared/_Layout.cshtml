                                    <i class="fa fa-shipping-fast" style="color:white;"></i>
                                    <a href="#" style="color:white;">Giao hàng nhanh</a>
                                </div>
                                <div style="padding-left: 20px">
                                    <a href="@Url.Action("GioHang", "GioHang")" style="color:#f4f8fb;">
                                        @{List<GioHang> gh = Session["GioHang"] as List<GioHang>;
                                            int sl = 0;
                                            if (gh != null)
                                            {
                                                sl = gh.Sum(n => n.soluongSP);
                                            }
                                        }
                                        <i class="fa fa-shopping-cart"> (@sl)</i>
                                    </a>
                                </div>
                            </nav>
